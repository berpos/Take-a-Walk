
<div class="container my-4">
  <h1>Create a Walker!</h1>

  <div class="mt-3">
    <%= simple_form_for @walker do |f| %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :phone_number %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>

      <div class="form-actions">
        <%= link_to "Cancel", walkers_path, class: "btn btn-outline-secondary btn-lg me-2" %>
        <%= f.submit "Create!", class: "btn btn-primary btn-lg me-2" %>
      </div>
    <% end %>
  </div>
</div>
